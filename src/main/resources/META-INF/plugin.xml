<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.git_churn</id>
    <name>Git Churn</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.xepozz.git_churn.listener.StartupListener"/>
        <projectViewNodeDecorator implementation="com.github.xepozz.git_churn.FileNodeDecorator" order="last"/>

        <applicationService serviceImplementation="com.github.xepozz.git_churn.config.GitChurnConfigSettings"/>
        <applicationConfigurable
                id="GitChurnConfigurable"
                parentId="tools"
                displayName="Git Churn"
                instance="com.github.xepozz.git_churn.config.GitChurnConfigurable"
        />
    </extensions>

    <projectListeners>
        <listener
                topic="com.github.xepozz.git_churn.listener.GitChurnListener"
                class="com.github.xepozz.git_churn.listener.GitChurnUpdater"
        />
    </projectListeners>
    <actions>
        <group id="ProjectView.GitChurn" text="Git Churn" popup="true">
            <action id="ProjectView.GitChurn.ToggleEnabledAction"
                    class="com.github.xepozz.git_churn.actions.ToggleEnabledAction"
                    text="Enabled"
                    description="Enables or disables showing the information">
            </action>
            <separator text="Duration"/>
            <action id="ProjectView.GitChurn.Duration1MonthAction"
                    class="com.github.xepozz.git_churn.actions.Duration1MonthAction"
                    text="1 Month"
                    description="Parses history since 1 month ago">
            </action>
            <action id="ProjectView.GitChurn.Duration3MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration3MonthsAction"
                    text="3 Months"
                    description="Parses history since 3 months ago">
            </action>
            <action id="ProjectView.GitChurn.Duration6MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration6MonthsAction"
                    text="6 Months"
                    description="Parses history since 6 months ago">
            </action>
            <action id="ProjectView.GitChurn.Duration1YearAction"
                    class="com.github.xepozz.git_churn.actions.Duration1YearAction"
                    text="1 Year"
                    description="Parses history since 1 year ago">
            </action>
            <action id="ProjectView.GitChurn.DurationFullAction"
                    class="com.github.xepozz.git_churn.actions.DurationFullAction"
                    text="Full History"
                    description="Parses history from the beginning">
            </action>

            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.ToolWindow.Sort.Actions"
                    anchor="after"
            />
        </group>

    </actions>
</idea-plugin>
