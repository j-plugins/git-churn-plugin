<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.git_churn</id>
    <name>Git Churn</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.xepozz.git_churn.StartupListener"/>
        <projectViewNodeDecorator implementation="com.github.xepozz.git_churn.FileNodeDecorator" order="last"/>
    </extensions>

    <actions>
        <group id="ProjectView.GitChurn" text="Git Churn" popup="true">
            <action id="ProjectView.FoldRootFiles.ToggleEnabledAction"
                    class="com.github.xepozz.git_churn.actions.ToggleEnabledAction"
                    text="Enabled"
                    description="Enables or disables showing the information">
            </action>
            <separator text="Duration" />
            <action id="ProjectView.FoldRootFiles.Duration1MonthAction"
                    class="com.github.xepozz.git_churn.actions.Duration1MonthAction"
                    text="1 Month"
                    description="Parses history since 1 month ago">
            </action>
            <action id="ProjectView.FoldRootFiles.Duration3MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration3MonthsAction"
                    text="3 Months"
                    description="Parses history since 3 months ago">
            </action>
            <action id="ProjectView.FoldRootFiles.Duration6MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration6MonthsAction"
                    text="6 Months"
                    description="Parses history since 6 months ago">
            </action>
            <action id="ProjectView.FoldRootFiles.Duration1YearAction"
                    class="com.github.xepozz.git_churn.actions.Duration1YearAction"
                    text="1 Year"
                    description="Parses history since 1 year ago">
            </action>
            <action id="ProjectView.FoldRootFiles.DurationFullAction"
                    class="com.github.xepozz.git_churn.actions.DurationFullAction"
                    text="Full History"
                    description="Parses history from the beginning">
            </action>

            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.ToolWindow.Sort.Actions"
                    anchor="after"
            />
        </group>

    </actions>
</idea-plugin>
