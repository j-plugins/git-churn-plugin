<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.git_churn</id>
    <name>Git Churn</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.GitChurnBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity
                implementation="com.github.xepozz.git_churn.listener.StartupListener"
        />
        <projectViewNodeDecorator
                order="last"
                implementation="com.github.xepozz.git_churn.FileNodeDecorator"
        />

        <applicationService
                serviceImplementation="com.github.xepozz.git_churn.config.GitChurnConfigSettings"
        />
        <applicationConfigurable
                id="GitChurnConfigurable"
                parentId="tools"
                key="plugin.title"
                bundle="messages.GitChurnBundle"
                instance="com.github.xepozz.git_churn.config.GitChurnConfigurable"
        />
    </extensions>

    <projectListeners>
        <listener
                topic="com.github.xepozz.git_churn.listener.GitChurnListener"
                class="com.github.xepozz.git_churn.listener.GitChurnUpdater"
        />
    </projectListeners>

    <actions>
        <group id="ProjectView.GitChurn" popup="true" compact="false">
            <action id="ProjectView.GitChurn.ToggleEnabledAction"
                    class="com.github.xepozz.git_churn.actions.ToggleEnabledAction">
            </action>
            <action id="ProjectView.GitChurn.ColoringAction"
                    class="com.github.xepozz.git_churn.actions.ColoringAction">
            </action>
            <separator key="separator.duration"/>
            <action id="ProjectView.GitChurn.Duration1MonthAction"
                    class="com.github.xepozz.git_churn.actions.Duration1MonthAction">
            </action>
            <action id="ProjectView.GitChurn.Duration3MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration3MonthsAction">
            </action>
            <action id="ProjectView.GitChurn.Duration6MonthsAction"
                    class="com.github.xepozz.git_churn.actions.Duration6MonthsAction">
            </action>
            <action id="ProjectView.GitChurn.Duration1YearAction"
                    class="com.github.xepozz.git_churn.actions.Duration1YearAction">
            </action>
            <action id="ProjectView.GitChurn.DurationFullAction"
                    class="com.github.xepozz.git_churn.actions.DurationFullAction">
            </action>

            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.ToolWindow.Sort.Actions"
                    anchor="after"
            />
        </group>
    </actions>
</idea-plugin>
